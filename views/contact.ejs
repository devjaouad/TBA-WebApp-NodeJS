                <form method="POST" action="/contact" class="form-horizontal" name="contactForm" novalidate>
			        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                <!--<div class="row">-->
                    <div class="col-md-4">
                        <div class="form-group">
                            <!--<label for="name">-->
                            <!--    Name</label>-->
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required="required" />
                        </div>
                        <div class="form-group">
                            <!--<label for="email">-->
